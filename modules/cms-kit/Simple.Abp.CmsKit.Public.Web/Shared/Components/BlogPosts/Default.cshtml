@using Volo.CmsKit.Public.Blogs


@foreach (var blogPost in Model.BlogPosts)
{
    string creationTime = blogPost.CreationTime.ToString("MMM dd, yyyy", new System.Globalization.CultureInfo("en-us"));
    <li class="post-item">
        <div class="meta">
            <time datetime="@creationTime" itemprop="datePublished">
                @creationTime
            </time>
        </div>
        <span>
            <a href="/blogs/@Model.BlogSlug/@blogPost.Slug">
                @blogPost.Title
            </a>
        </span>
    </li>
}