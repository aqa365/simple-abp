@page
@using Simple.Abp.Articles.Public.Web.Shared.Components.About
@using Simple.Abp.Articles.Public.Web.Shared.Components.Article
@using Simple.Abp.Articles.Public.Web.Shared.Components.Project
@model Simple.Abp.Articles.Public.Web.Pages.IndexModel
@{
}

@(await Component.InvokeAsync<AboutViewComponent>())

<section id="writing">
    <span class="h1">
        <a href="/writing">Writing</a>
    </span>

    <ul class="post-list">
        @(await Component.InvokeAsync<ArticleViewComponent>(new { modelList = Model.Articles }))
    </ul>
</section>

<section id="projects">
    <span class="h1">
        <a href="/projects">Projects</a>
    </span>
    <ul class="project-list">
        @(await Component.InvokeAsync<ProjectViewComponent>(new { modelList = Model.Projects }))
    </ul>
</section>

<section id="Bilibili">
    <span class="h1">
        <a href="/bilibili">Bilibili</a>
    </span>
    <ul class="project-list">
        @(await Component.InvokeAsync<ProjectViewComponent>(new { modelList = Model.Videos }))
    </ul>
</section>
@section scripts{
    <abp-script src="/libs/typed/typed.min.js"></abp-script>
    <script type="text/javascript">
        var line = 'Find me on ';

        var line2= '<a class="icon" target="_blank" rel="noopener" href="https://github.com/aqa365">';
        line2 += '<i class="fab fa-github"></i>';
        line2 += '</a> , ';

        var line3 = '<a class="icon" target="_blank" rel="noopener" href="mailto:aqa.china@outlook.com">'
        line3 += '<i class="fas fa-envelope"></i>';
        line3 += '</a> .';
        var typed = new Typed('#description', {
            strings: [line + line2, line + line3, line + line2 + line3],
            cursorChar: '_',
            typeSpeed: 50,   //打印速度
            backSpeed: 50,
            backDelay: 1000,
        });
    </script>
}