<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RootNamespace>Simple.Abp.IdentityServer</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Volo.Abp.Authorization" Version="5.0.0" />
		<PackageReference Include="Volo.Abp.Ddd.Application.Contracts" Version="5.0.0" />
		<PackageReference Include="Volo.Abp.IdentityServer.Domain.Shared" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Localization\SimpleAbpIdentityServer\*.json" />
		<Content Remove="Localization\SimpleAbpIdentityServer\*.json" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="6.0.0" />
	</ItemGroup>

</Project>
